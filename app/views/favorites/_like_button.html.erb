<% unless current_user == micropost.user %>
  <% if current_user.liking?(micropost) %>
    <%= form_for(current_user.favorites.find_by(micropost_id: micropost.id), html: { method: :delete, style: 'display: inline'}) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Delete from Favorites', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% else %>
    <%= form_for(current_user.favorites.build) do |f| %>
      <%= hidden_field_tag :micropost_id, micropost.id %>
      <%= f.submit 'Add to Favorites', class: 'btn btn-danger btn-xs' %>
    <% end %>
  <% end %>
<% end %>